        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_14" />
            <solid android:color="#FFD2AA" />
        </shape>

    </item>

    <item android:bottom="@dimen/dp_2">
        <shape>
            <corners android:radius="@dimen/dp_14" />
            <gradient
