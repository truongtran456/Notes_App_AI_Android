<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <solid android:color="@color/colorF37E02" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:angle="270"
                android:startColor="@color/colorFFC340"
                android:endColor="@color/colorFF8400"
                android:type="linear"/>
        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_bong"
        android:gravity="start|top"
        android:start="4dp"
        android:top="4dp" />

</layer-list>