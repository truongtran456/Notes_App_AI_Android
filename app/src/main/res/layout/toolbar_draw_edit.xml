<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llToolbarDraw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <!-- Back -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:clickable= "true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:padding="6dp"
            android:background="@drawable/bg_back"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <!-- Undo -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivUndo"
            android:clickable= "true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:padding="6dp"
            android:background="@drawable/bg_back"
            android:scaleType="centerInside"
            android:src="@drawable/ic_undo" />

        <!-- Redo -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRedo"
            android:clickable= "true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:padding="6dp"
            android:background="@drawable/bg_back"
            android:scaleType="centerInside"
            android:src="@drawable/ic_redo" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Draw / Brush picker -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDraw"
            android:clickable= "true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_layer"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pen_pencil" />

        <!-- Search icon (giữ lại giống toolbar cũ) -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSearch"
            android:clickable= "true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_undo"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/search" />

        <!-- Pin icon (giữ lại giống toolbar cũ) -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPin"
            android:clickable= "true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_undo"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/pin" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>