<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Back giống nút menu ở NotesToolbar nhưng là quay lại -->
    <ImageButton
        android:id="@+id/ivBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circular_button"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/navigation_drawer_open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Card bo góc ở giữa, giống hệt NotesSearchCard -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/EditActionsCard"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="0dp"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/bg_search_pill">

            <!-- Undo (trái trong card) -->
            <ImageButton
                android:id="@+id/ivUndo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circular_button"
                android:src="@drawable/undo"
                android:tint="#000000"
                android:contentDescription="@string/undo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Redo, sát bên Undo -->
            <ImageButton
                android:id="@+id/ivRedo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_circular_button"
                android:src="@drawable/redo"
                android:tint="#000000"
                android:contentDescription="@string/redo"
                app:layout_constraintStart_toEndOf="@id/ivUndo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Pin: ở bên phải card, giống vị trí search button -->
            <ImageButton
                android:id="@+id/ivPin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_circular_button"
                android:src="@drawable/pin"
                android:tint="#000000"
                android:contentDescription="@string/pin"
                app:layout_constraintEnd_toStartOf="@id/ivMore"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- More: ở mép phải card, giống NotesMoreButton -->
            <ImageButton
                android:id="@+id/ivMore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circular_button"
                android:src="@drawable/more_vert"
                android:tint="#000000"
                android:contentDescription="@string/tap_for_more_options"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
