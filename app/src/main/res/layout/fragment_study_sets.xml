<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_background_layer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Overview Cards (3 cards hiển thị vừa màn hình) -->
        <LinearLayout
            android:id="@+id/OverviewCardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="24dp">

            <!-- Card 1: Learned -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/CardLearned"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/CardLearnedContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/bg_overview_learned">

                    <ImageView
                        android:id="@+id/CardLearnedIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/notebook"
                        android:contentDescription="@string/app_name"
                        android:layout_marginEnd="6dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start|center_vertical">

                        <TextView
                            android:id="@+id/CardLearnedValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 Sets"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/CardLearnedLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Learned"
                            android:textColor="#757575"
                            android:textSize="13sp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:maxLines="1" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Words -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/CardWords"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/CardWordsContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/bg_overview_words">

                    <ImageView
                        android:id="@+id/CardWordsIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/text_format"
                        android:contentDescription="@string/app_name"
                        android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start|center_vertical">

                        <TextView
                            android:id="@+id/CardWordsValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 Words"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/CardWordsLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Words"
                            android:textColor="#757575"
                            android:textSize="13sp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:maxLines="1" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3: Streak -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/CardStreak"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/CardStreakContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/bg_overview_streak">

                    <ImageView
                        android:id="@+id/CardStreakIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ai_sparkle"
                        android:contentDescription="@string/app_name"
                        android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start|center_vertical">

                        <TextView
                            android:id="@+id/CardStreakValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0-day"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/CardStreakLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Streak"
                            android:textColor="#757575"
                            android:textSize="13sp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:maxLines="1" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Section: ĐÃ HỌC -->
        <TextView
            android:id="@+id/SectionStudiedHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_studied"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#7A7A7A"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/StudiedSetsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            tools:listitem="@layout/item_study_set_card" />

        <!-- Section: CHƯA HỌC -->
        <TextView
            android:id="@+id/SectionNotStudiedHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_not_studied"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#7A7A7A"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/NotStudiedSetsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_study_set_card" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/EmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="48dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/checkbox"
                android:alpha="0.3"
                android:contentDescription="Empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No study sets yet"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create your first checklist to start learning"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

