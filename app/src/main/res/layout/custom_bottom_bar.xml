<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CustomBottomBarContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="#EBFFFFFF"
    android:translationZ="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:minHeight="56dp">

        <!-- Home Item -->
        <FrameLayout
            android:id="@+id/BottomBarItemHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <LinearLayout
                android:id="@+id/BottomBarItemHomeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/BottomBarIconHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/home"
                    android:contentDescription="@string/home" />

                <TextView
                    android:id="@+id/BottomBarTextHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Notes Item -->
        <FrameLayout
            android:id="@+id/BottomBarItemNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <LinearLayout
                android:id="@+id/BottomBarItemNotesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/BottomBarIconNotes"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notebook"
                    android:tint="#9E9E9E"
                    android:contentDescription="@string/notes" />

                <TextView
                    android:id="@+id/BottomBarTextNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notes"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Checklist Item -->
        <FrameLayout
            android:id="@+id/BottomBarItemList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <LinearLayout
                android:id="@+id/BottomBarItemListContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/BottomBarIconList"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/checkbox"
                    android:tint="#9E9E9E"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/BottomBarTextList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Study Sets"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Settings Item -->
        <FrameLayout
            android:id="@+id/BottomBarItemSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <LinearLayout
                android:id="@+id/BottomBarItemSettingsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/BottomBarIconSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/settings"
                    android:tint="#9E9E9E"
                    android:contentDescription="@string/settings" />

                <TextView
                    android:id="@+id/BottomBarTextSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textSize="12sp"
                    android:textColor="#FF9800"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

