<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: nền trắng xám rất nhẹ -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_90"/>
        </shape>
    </item>

    <!-- Layer 2: gradient tím chéo (không đều) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/purple_light"
                android:centerColor="@color/purple_soft"
                android:endColor="@color/purple_main"/>
        </shape>
    </item>

    <!-- Layer 3: gradient loang radial 1 - góc trên trái (tím đậm) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="0.15"
                android:centerY="0.15"
                android:startColor="@color/purple_deep"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Layer 4: gradient loang radial 2 - góc dưới phải (tím vừa) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:centerX="0.85"
                android:centerY="0.85"
                android:startColor="@color/purple_main"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Layer 5: gradient loang radial 3 - giữa trái (tím nhạt) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="0.2"
                android:centerY="0.5"
                android:startColor="@color/purple_soft"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Layer 6: gradient loang radial 4 - giữa phải (tím nhạt) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="750dp"
                android:centerX="0.8"
                android:centerY="0.5"
                android:startColor="@color/purple_light"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Layer 7: gradient loang radial 5 - giữa trên (trắng nhẹ) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:centerX="0.5"
                android:centerY="0.2"
                android:startColor="#60FFFFFF"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Layer 8: gradient loang radial 6 - giữa dưới (tím nhạt) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="850dp"
                android:centerX="0.5"
                android:centerY="0.8"
                android:startColor="@color/purple_light"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Layer 9: gradient loang chéo 1 - tạo dải lụa -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#30D8D0E8"
                android:centerColor="@android:color/transparent"
                android:endColor="#30E8E0F5"/>
        </shape>
    </item>

    <!-- Layer 10: gradient loang chéo 2 - tạo dải lụa -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#25E0D8F0"
                android:centerColor="@android:color/transparent"
                android:endColor="#25D8D0E8"/>
        </shape>
    </item>

    <!-- Layer 11: lớp kính mờ (glass overlay) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_overlay"/>
        </shape>
    </item>

</layer-list>

