<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient: cam/kem ấm, bỏ tím -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FFF7EC"
                android:centerColor="#FFF3DE"
                android:endColor="#FFD5B0" />
        </shape>
    </item>
    <!-- Overlay nhẹ để dịu mắt -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.3"
                android:gradientRadius="1000dp"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list>
